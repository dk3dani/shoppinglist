<p id="notice"><%= notice %></p>

<h1>Shopping list</h1>

<table class="table  table-hover table-bordered">
  <thead class="thead-dark">
    <tr>
     <th scope="col">Name</th>
     <th  scope="col" >description</th>
      <th scope="col" >purchase</th>
       <th scope="col" >Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr> 
      <td ><%=list.name%></td>
      <td><%=list.description%></td>
      <td><%=list.purchase%></td>
        <td ><%= link_to 'Show', user_list_path(@user, list) %></td>
        <td ><%= link_to 'Edit', edit_user_list_path(@user,list) %></td>
        <td ><%= link_to 'Destroy', user_list_path(@user,list), method: :delete, data: { confirm: 'Are you sure?' } %>  </td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to 'New List', new_user_list_path , class:"btn btn-primary btn" %>
